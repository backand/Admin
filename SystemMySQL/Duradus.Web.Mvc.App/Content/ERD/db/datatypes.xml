    </group>
	<group label="Date &amp; Time" color="rgb(200,255,200)">
		<type label="DateTime" length="0" sql="DateTime" quote="" bytes="8" note="Jan 1, 1753 to Dec 31, 9999" />
	</group>
	<group label="Miscellaneous"  color="rgb(200,220,255)">
		<type label="Boolean" length="0" sql="Boolean" quote="" bytes="1" note="Check Box" />
        <type label="SingleSelect" length="0" sql="SingleSelect" quote="" bytes="1" note="SingleSelect: Drop Down" />
        <type label="MultiSelect" length="0" sql="MultiSelect" quote="" bytes="1" note="MultiSelect: Check List" />
    </group>
  
